<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/tv_instrucao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OlÃ¡,"
        android:textSize="18sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tv_nome_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Nome do UsuÃ¡rio"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="48dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_revelacao"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:strokeColor="@color/colorAccent"
        app:strokeWidth="3dp"
        app:cardBackgroundColor="@color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_revelado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/gradient_accent"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ‰ Seu Amigo Secreto Ã©"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_amigo_sorteado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    tools:text="NOME DO AMIGO"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_escondido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_eye"
                    app:tint="@color/colorPrimary"
                    android:contentDescription="Revelar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="ðŸ‘† Toque para revelar"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ver_desejos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="32dp"
        android:text="ðŸŽ LISTA DE DESEJOS"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:backgroundTint="@color/colorAccent"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_gift"
        app:iconTint="@color/white"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Mantenha em segredo! ðŸ¤«"
        android:textColor="@color/colorError"
        android:textSize="14sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Voltar para a lista"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

</LinearLayout>
