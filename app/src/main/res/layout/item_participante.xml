<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_numero"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/tv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="A"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tv_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:text="Nome"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:text="Status"/>

            <TextView
                android:id="@+id/tv_desejos_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0 desejos"
                android:textSize="11sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:drawablePadding="4dp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_gift"
                app:drawableTint="@color/colorAccent" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_desejos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_gift"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/colorAccent"
            android:contentDescription="Meus Desejos"/>

        <ImageButton
            android:id="@+id/btn_regras"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_rules"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/colorPrimary"
            android:contentDescription="Restrições"/>

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_share"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/colorSecondary"
            android:contentDescription="Compartilhar"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/btn_remover"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/colorError"
            android:contentDescription="Remover"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
